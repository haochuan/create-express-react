{
  "name": "create-express-react-server",
  "version": "1.0.0",
  "description": "express server in create-express-react",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "npm test -- --watch",
    "lint": "eslint ./**/*.js",
    "dev": "NODE_ENV=dev nodemon ./index.js --exec babel-node --presets es2015,stage-2 --ignore ./__test__/* --ignore ./react/*",
    "prod": "npm run build && NODE_ENV=production node ./build/server/index.js",
    "build": "./node_modules/.bin/rimraf ./build && NODE_ENV=production webpack --config ./webpack.production.config.js --progress --profile --colors && npm run buildServer",
    "buildServer": "babel src/server -s -D -d build/server",
    "deploy": "npm run build && pm2 start server.json"
  },
  "keywords": [
    "react",
    "express",
    "javascript",
    "full-stack",
    "template",
    "node"
  ],
  "author": "Haochuan Liu<haochuan.liu@gmail.com>(https://haochuan.io)",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "express": "^4.15.3",
    "helmet": "^3.8.0",
    "morgan": "^1.8.2",
    "serve-favicon": "^2.4.3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.3.0",
    "jest": "^20.0.4"
  }
}
